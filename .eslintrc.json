{
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 12,
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true
      }
    },
    "rules": {
      "prettier/prettier": ["error", {
          "endOfLine": "auto"
        }],
      "operator-linebreak": "off",
      "indent": "off",
      "object-curly-newline": "off",
      "prefer-promise-reject-errors": "off",
      "no-underscore-dangle": "off",
      "no-console": "off",
      "max-len": [
        "error",
        {
          "code": 90,
          "tabWidth": 2,
          "ignoreStrings": true,
          "ignoreTemplateLiterals": true
        }
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ]
    },
    "env": {
      "commonjs": true,
      "node": true,
      "es2021": true,
      "jest": true
    },
    "globals": {
      "expect": true,
      "assert": true
    }
  }