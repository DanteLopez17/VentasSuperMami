<div class="row">
  <div class="col-1">
    {{> barranavegacion}}
  </div>
  <div class="col-1"></div>
  <div class="col-9">
    <div class='container p-4'>
      <div>
        <!--class="login-box" -->
        <h1 class="animate__animated animate__bounce">Modificar Usuario</h1>
        <form name='frmAltaUsuario' action='/usuario/editar' method='POST'>
          <!--Rol-->
          <div class='row'>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <label for='cboRol'>Rol:</label>
            </div>
            <div hidden='true'>
              <label for='txtNombre'>Persona:</label>
              <input type='text' id='txtIdPersona' name='persona' placeholder='Ingrese el nombre' alt='Campo nombre'
                value='{{usuarios.idPersona}}' />
            </div>
            <div class='col-md-2'>
              <select id='cboRol' name='cboRol' placeholder='Rol' alt='Seleccionar Rol' class='form-control'>
                <option value="{{usuarios.idRol}}">{{usuarios.descripcion}} </option>
              </select>
            </div>
            <div class='col-md-2'></div>
            <div class='col-md-3'></div>
            <div class="col-md-1">
              <label hidden for='cboEstado'>Estado:</label>
            </div>
            <div class='col-md-1'>
              <select hidden id='cboEstado' class='form-control' name="activo">
                <option value='5'> Activo </option>
                <option value='6'> Inactivo </option>
              </select>
            </div>
            <div class="col-md-1"></div>
          </div>
          <hr>
          <h3>Informacion personal</h3>
          <div class='row'>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <label for='txtNombre'>Legajo:</label>
            </div>
            <div class='col-md-2'>
              <input class='form-control' type='text' id='txtLegajo' name='legajo' placeholder='' readonly
                alt='Campo Legajo' value='{{usuarios.legajo}}' />
            </div>
            <div class="col-md-3"></div>
            <div class='col-md-1'>
              <!--Nombre-->
              <label for='txtNombre'>Nombre:</label>
            </div>
            <div class='col-md-3'>
              <input class='form-control' type='text' id='txtNombre' name='nombre' placeholder='Ingrese el nombre'
                alt='Campo nombre' value='{{usuarios.nombre}}' />
            </div>
            <div class="col-md-1"></div>
          </div>
          <!--Fecha de nacimiento-->
          <div class='row'>
            <div class='col-md-2'>
              <label class="text-right" for='dtpFechaNacimiento'>Fecha de nacimiento:</label>
            </div>
            <div class='col-md-2'>
              <input class='form-control' type='date' id='dtpFechaNacimiento' name='FechaNacimiento'
                alt='Campo fecha de nacimiento' value='{{usuarios.FechaNacimiento}}' />
            </div>
            <div class='col-md-2'></div>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <!--Apellido-->
              <label for='txtApellido'>Apellido:</label>
            </div>
            <div class='col-md-3'>
              <input class='form-control' type='text' id='txtApellido' name='apellido' placeholder='Ingrese el apellido'
                alt='Campo apellido' value='{{usuarios.apellido}}' />
            </div>
            <div class="col-md-1"></div>
          </div>
          <div class='row'>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <label for='txtLocalidad'>Localidad:</label>
            </div>

            <div class="col-md-2">
          <select class="dropdown-toggle dropdown-toggle-split form-control" id='cboLocalidad'
            name='idLocalidad' alt='Campo localidad'>
            <option value='{{usuarios.idLocalidad}}'> {{usuarios.localidad}} </option>
          </select>
        </div>

  
            <div class="col-md-3"></div>
            <div class='col-md-1'>
              <!--Direccion-->
              <label for='txtDireccion'>Direccion:</label>
            </div>
            <div class='col-md-3'>
              <input class='form-control' type='text' id='txtDireccion' name='direccion' alt='Campo direccion'
                placeholder='Ingrese la direccion de residencia' value='{{usuarios.direccion}}' />
            </div>
            <div class="col-md-1"></div>
          </div>
          <hr />
          <h3>Contacto</h3>
          <!--Telefono-->
          <div class='row'>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <label for='txtTelefono'>Telefono:</label>
            </div>
            <div class='col-md-2'>
              <input class='form-control' type='text' id='txtTelefono' name='telefono' alt='Campo telefono'
                placeholder='Ingrese el telefono de contacto' maxlength="20" value='{{usuarios.telefono}}' />
            </div>
            <div class="col-md-3"></div>
            <div class='col-md-1'>
              <!--Email-->
              <label for='txtEmail'>Email:</label>
            </div>
            <div class='col-md-3'>
              <input class='form-control' type='email' id='txtEmail' name='email' alt='Campo email'
                placeholder='Ingrese el email de contacto' value='{{usuarios.email}}' />
            </div>
            <div class="col-md-1"></div>
          </div>
          <hr />
          <h3>Establecer contraseña</h3>
          <!--Contraseña-->
          <div class='row'>
            <div class="col-md-1"></div>
            <div class='col-md-1'>
              <label for='txtPass'>Contraseña:</label>
            </div>
            <div class='col-md-2'>
              <input class='form-control' type='password' id='txtPass' name='password' alt='Campo Contraseña'
                placeholder='Ingrese la contraseña' value='{{usuarios.password}}' />
            </div>
            <div class="col-md-2"></div>
            <div class='col-md-2'>
              <!--Confirmar Contraseña-->
              <label for='txtPass'>Confirmar Contraseña:</label>
            </div>
            <div class='col-md-2'>
              <input class='form-control' type='password' id='txtPassConf' name='passwordConfir'
                alt='Campo confirmar contraseña' placeholder='Ingrese nuevamente la contraseña'
                value='{{usuarios.password}}' />
            </div>
           <div class='row'>
            <div class="col-1">
            <button type="button" id="volver" class='btn btn-secondary' id='btnVolver'>Volver</button>
            </div>
            <div class="col-7"></div>
            <div class="col-4">
              <div class="col-10"></div>
              <div class="col-2">
                 <input type="submit" value="Actualizar" class='btn btn-success' id='btnActualizar' onclick="return validar()" Actualizar />
              </div>
            </div>
          </div>

          </div>
      </div>
      </form>

    </div>
  </div>
</div>
<div class="col-1"></div>
</div>
<script src="/js/estados.js"></script>
<script>
  $(document).ready(() => {
    $("#cboEstado").change(function () {
      estados();
    })
  });
</script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="/js/validacion-usuario.js"></script>
<script>


  $("#cboEstado").change(function () {
    var valor = $(this).val();
  });

  $('#volver').click(function () {


    location.href = 'http://localhost:4000/vistas/usuario/listado';
  });

</script>
<script src="/js/combos.js"></script>